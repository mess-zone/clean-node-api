{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Estudo de criação de uma API Node utilizando Clean Architecture e TDD",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --colors  --passWithNoTests",
    "test:unit": "npm test -- --watch --coverage false -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:staged": "npm test -- --noStackTrace --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mess-zone/clean-node-api.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mess-zone/clean-node-api/issues"
  },
  "homepage": "https://github.com/mess-zone/clean-node-api#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.0",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.3.0",
    "validator": "^13.7.0"
  }
}
